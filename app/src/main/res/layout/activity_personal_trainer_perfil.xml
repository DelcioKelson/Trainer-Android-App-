<?xml version="1.0" encoding="utf-8"?>


<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_perfil_personal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ActivityPersonalTrainerPerfil"
    android:orientation="vertical">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/iv_perfil"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tv_nome_perfil"
        android:layout_width="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Material.Headline"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_perfil"/>

    <RatingBar
        android:id="@+id/rb_perfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:progressTint="@color/duskYellow"
        android:isIndicator="true"
        android:progressBackgroundTint="@color/lightGrey"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/tv_numero_comentarios"/>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btn_comentar"
        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="comentar"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/rb_perfil"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_numero_comentarios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_nome_perfil"/>

    <TextView
        android:id="@+id/tv_info_perfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:hint="@string/ainda_nao_tem_classifica_oes"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/rb_perfil"/>


    <GridView
        android:id="@+id/gridview_comentario"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:columnWidth="150dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="65dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:numColumns="1"
        android:verticalSpacing="24dp"
        android:horizontalSpacing="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_comentar"
        />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btn_gerar_preco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
        android:text="gerar preÃ§o"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:drawableEnd="@drawable/arrow_right_black"/>



</androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/menu_nav"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        android:id="@+id/nv_personal">

    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>