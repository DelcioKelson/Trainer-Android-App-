<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="10dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentTodasMarcacoes">


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:elevation="10dp"
        android:layout_height="300dp"
        app:shapeAppearance="@style/card_round"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:gravity="center">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="110dp"
                    android:layout_margin="10dp"
                    android:id="@+id/cv_1"
                    android:layout_height="110dp">
                    <TextView
                        android:gravity="center"
                        android:id="@+id/tv_marcacaoes_pendentes"
                        android:layout_width="match_parent"
                        style="@style/TextAppearance.AppCompat.Title"
                        android:layout_height="match_parent"
                        android:text="pendentes" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="110dp"
                    android:layout_margin="10dp"
                    android:layout_height="110dp">
                    <TextView
                        android:gravity="center"
                        android:id="@+id/tv_marcacoes_aceites"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/TextAppearance.AppCompat.Title"
                        android:text="aceites" />
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_nova_marcacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/colorPrimary"
                app:srcCompat="@drawable/ic_add" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/tv_marcacoes_pagas"
                        style="@style/TextAppearance.AppCompat.Title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="pagas" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/tv_historico"
                        style="@style/TextAppearance.AppCompat.Title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Historico" />
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>




        </LinearLayout>



    </com.google.android.material.card.MaterialCardView>




    <androidx.viewpager.widget.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager"
        android:visibility="gone"

        android:layout_width="match_parent"
        android:layout_height="fill_parent">
        <com.google.android.material.tabs.TabLayout
            style="@style/Widget.MaterialComponents.TabLayout"
            android:id="@+id/tab_layout"
            app:tabTextAppearance="@style/MineCustomTabText"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </androidx.viewpager.widget.ViewPager>



</LinearLayout>